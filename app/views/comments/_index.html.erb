<%= comments.count %>件コメント
<!-- コメント二件 -->
<h6 class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る....</h6>

<% comments.first(2).each do |comment| %>
  <%# コメントない場合 %>
  <% unless comment.id.nil? %>
    <li>
      <div class="">
        <div class="">
          <%# <%= attachment_image_tag....gemが必要 %>
          <%= image_tag comment.user.user_image.url unless comment.user.user_image.nil?  %>
        </div>
        <div class="">
          <p>
            <%= link_to "@#{comment.user.user_name}", user_path(comment.user.id) %>
          </p>
          <div class="">
            <%= comment.text %>
            <% if comment.user == current_user %>
              <%= link_to t('dictionary.words.edit'),  edit_suggest_comment_path(comment, suggest_id: comment.suggest.id,), class: 'btn btn-default btn-sm' %>

            <% elsif current_user.admin %>
              <%= link_to t('dictionary.words.destroy'), suggest_comment_path(comment), class: 'btn btn-default btn-sm' %>
            <% end %>
          </div>
          <span class="">
            <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </span>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
<!-- 4件目以降 -->
<div class="collapse" id="collapseExample">
    <% comments.offset(2).each do |comment| %>
      <% unless comment.id.nil? %>
        <div class="">
          <%= image_tag comment.user.user_image.url unless comment.user.user_image.nil?  %>
        </div>
        <div class="">
          <p>
            <%= link_to "@#{comment.user.user_name}", user_path(comment.user.id) %>
          </p>
          <div class="">
            <%= comment.text %>
            <% if comment.user == current_user %>
              <%= link_to t('dictionary.words.edit'),  edit_suggest_comment_path(comment, suggest_id: comment.suggest.id,), class: 'btn btn-default btn-sm' %>

            <% elsif current_user.admin %>
              <%= link_to t('dictionary.words.destroy'), suggest_comment_path(comment), class: 'btn btn-default btn-sm' %>
            <% end %>
          </div>
          <span class="">
            <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </span>
        </div>
      <% end %>
    <% end %>
</div>
