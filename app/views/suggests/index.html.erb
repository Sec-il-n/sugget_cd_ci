<h1><%= t('.suggestions') %></h1>
<%# カテゴリ検索 %>
<%= form_with(url: suggests_path, method: 'get', local: true)do |f| %>
<%# <%= form_with(scope: :search, method: get, local: true)do |f| %>
  <%= f.label t('.category_search') %>
  <%# <%= f.label :category_id %>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
<% @suggests.each do |suggest| %>
  <div class="">
    <%= link_to t('.show'), suggest_path(suggest.id) %>
    <p><%= t('.overview') %></p>
    <%# 検証　引数なし→＠suggestsの場合のみOK %>
    <p><%= link_to t('.info'), choose_corp_or_prop_path(suggest) %></p>
    
    <% if suggest.user.user_image.present? %>
      <p><%= image_tag suggest.user.user_image.url %></p>
    <% end %>
    <p><%= suggest.details %></p>
    <% suggest.tags.each do |tag| %>
      <%= link_to tag.name, suggests_path(tag: tag.id, class: 'btn btn-default') %>
    <% end %>
  </div>
